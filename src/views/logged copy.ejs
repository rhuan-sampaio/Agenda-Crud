<%- include('./includes/header') %>
<%- include('./includes/nav') %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-5">
            <h1 class="text-center">Seja bem-vindo, <%= user.name %> </h1>
            
            <p class="text-center lead">Listagem de seus contatos:</p>
            <%- include('./includes/messages') %>
            
            <div class="responsive-table">
                <table class="table my-3">
                    <% if(contatos.length > 0) {%>
                    <% contatos.forEach( contato =>{ %>
                        <tr>
                            <td> <%= contato.name %> </td>
                            <td><%= contato.lastname %> </td>
                            <td> <%= contato.email %> </td>
                            <td> <%= contato.number %>  </td>
                            <% if(user){ %>
                            <td> <a href="/contato/index/<%=contato._id%>"> Editar </a> </td>
                            <td> <a class="text-danger" href="/contato/delete/<%=contato._id%>"> Excluir </a> </td>
                            <% } %>
                        </tr>
                    <%  }) %>
                    <%}else{%>
                        <p class="text-center my-5">Ainda n√£o existem contatos cadastrados.</p>

                    <%}%>
                    
                </table>
            </div>
                    
            </div>
           
            </div>
        </div>

        <div class="col-lg-2"></div>
    </div>
</div>


<%- include('./includes/footer') %>
